<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                hint="JSEARCH_FILTER"
        />

        <field
                name="orderstatus"
                type="jdideal.messageresult"
                onchange="this.form.submit();">
            <option value="">COM_ROPAYMENTS_SELECT_PAYMENTSTATUS</option>
        </field>

        <field
                name="psp"
                type="jdideal.psp"
                onchange="this.form.submit();"
        >
            <option value="">COM_ROPAYMENTS_SELECT_PSP</option>
        </field>

        <field
                name="language"
                type="language"
                onchange="this.form.submit();"
        >
            <option value="">COM_ROPAYMENTS_SELECT_LANGUAGE</option>
            <option value="*">JALL</option>
        </field>

    </fields>

    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini advancedSelect"
                default="25"
                onchange="this.form.submit();"
        />

        <field
                name="fullordering"
                type="hidden"
        />
    </fields>
</form>
