<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				hint="JSEARCH_FILTER"
		/>

		<field
				name="psp"
				type="jdideal.psp"
				onchange="this.form.submit();"
				class="advancedSelect"
		>
			<option value="">COM_ROPAYMENTS_SELECT_PSP</option>
		</field>
	</fields>
	<fields name="list">
		<field
				name="limit"
				type="limitbox"
				class="input-mini advancedSelect"
				default="25"
				onchange="this.form.submit();"
		/>

		<field
				name="fullordering"
				type="hidden"
		/>
	</fields>
</form>
