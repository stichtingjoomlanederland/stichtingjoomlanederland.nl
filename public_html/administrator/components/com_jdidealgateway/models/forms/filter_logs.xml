<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				hint="JSEARCH_FILTER"
		/>

		<field
				name="origin"
				type="jdideal.origin"
				onchange="this.form.submit();"
		>
			<option value="">COM_ROPAYMENTS_SELECT_ORIGIN</option>
		</field>

		<field
				name="psp"
				type="jdideal.psp"
				onchange="this.form.submit();"
		>
			<option value="">COM_ROPAYMENTS_SELECT_PSP</option>
		</field>

		<field
				name="card"
				type="jdideal.card"
				class="advancedSelect custom-select"
				onchange="this.form.submit();"
		>
			<option value="">COM_ROPAYMENTS_SELECT_CARD</option>
		</field>

		<field
				name="currency"
				type="jdideal.currency"
				class="advancedSelect custom-select"
				onchange="this.form.submit();"
		>
			<option value="">COM_ROPAYMENTS_SELECT_CURRENCY</option>
		</field>

		<field
				name="result"
				type="jdideal.result"
				class="advancedSelect custom-select"
				onchange="this.form.submit();"
		>
			<option value="">COM_ROPAYMENTS_SELECT_RESULT</option>
		</field>

	</fields>

	<fields name="list">
		<field
				name="limit"
				type="limitbox"
				class="input-mini advancedSelect"
				default="25"
				onchange="this.form.submit();"
		/>

		<field
				name="fullordering"
				type="hidden"
		/>
	</fields>
</form>
