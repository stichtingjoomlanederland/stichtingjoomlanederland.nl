<?xml version="1.0" encoding="utf-8"?>

<form>
    <fieldset name="customer">
        <field
                name="id"
                type="hidden"
                class="readonly"
                readonly="true"/>

        <field name="name"
               type="text"
               label="COM_ROPAYMENTS_CUSTOMER_NAME_LABEL"
               description="COM_ROPAYMENTS_CUSTOMER_NAME_DESC"
               required="true"
               class="advancedSelect custom-select">
        </field>

        <field name="email"
               type="text"
               label="COM_ROPAYMENTS_CUSTOMER_EMAIL_LABEL"
               description="COM_ROPAYMENTS_CUSTOMER_EMAIL_DESC"
               required="true"
               class="advancedSelect custom-select">
        </field>

        <field name="customerId"
               type="text"
               label="COM_ROPAYMENTS_CUSTOMER_CUSTOMERID_LABEL"
               description="COM_ROPAYMENTS_CUSTOMER_CUSTOMERID_DESC"
               required="true"
               class="advancedSelect custom-select">
        </field>
    </fieldset>
</form>
