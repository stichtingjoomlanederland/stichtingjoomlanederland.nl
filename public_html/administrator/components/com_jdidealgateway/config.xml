			   type="password"
			   label="COM_ROPAYMENTS_DOWNLOAD_LABEL"
			   description="COM_ROPAYMENTS_DOWNLOAD_DESC"
			   default=""
			   size="100"
			   class="input-xxlarge"/>
	</fieldset>
	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules"
			   type="rules"
			   label="JCONFIG_PERMISSIONS_LABEL"
			   validate="rules"
			   filter="rules"
			   component="com_jdidealgateway"
			   section="component">
