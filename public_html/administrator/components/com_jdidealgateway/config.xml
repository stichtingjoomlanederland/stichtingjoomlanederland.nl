<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="general" label="COM_ROPAYMENTS_CONFIG_LABEL">
		<field name="domain"
			   type="text"
			   label="COM_ROPAYMENTS_DOMAIN_LABEL"
			   description="COM_ROPAYMENTS_DOMAIN_DESC"
			   default=""
			   size="100"
			   class="input-xxlarge" />

		<field name="expireDays"
			   type="number"
			   default="0"
			   class="input-mini"
			   label="COM_ROPAYMENTS_EXPIRE_DAYS_LABEL"
			   description="COM_ROPAYMENTS_EXPIRE_DAYS_DESC" />
